<%= render "shared/errors", obj: @article %>
<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder:"Enter title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "Enter description" %>
  </div>
  <%= f.submit class: "btn btn-secondary", id: "form_submit" %>

  <div class="text-center">
    [ <%= link_to "Cancel request and return to articles list", articles_path %> ]
  </div>
<% end %>