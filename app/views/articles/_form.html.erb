<hr class="star-light mb-5">
<%= form_for @article do |f| %>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    </div>
    <% if current_page?(action: "new") %>
        <%= f.submit class: "btn btn-secondary", id: "form_submit", disabled: true, data: {swal: {"text":"Article successfully created","type":"success","title":"Success"}} %>
    <% else %>    
        <%= f.submit class: "btn btn-secondary", id: "form_submit", data: {swal: {"text":"Article successfully created","type":"success","title":"Success"}} %>
    <% end %>
<% end %>