<div class="container">
  <h2 class="text-center">List of articles</h2>
  <p>
    <%= link_to "Create new article", new_article_path %>
  </p>
  <% @articles.each_with_index do |article, i| %>
    <div class="card" style="margin-bottom: 10px;">
      <div class="card-header text-center">
        <h4 style="font-weight: bold;"><%= article.title %></h4>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= truncate(article.description, length: 100, separator: ' ') %></p>
          <footer class="footer" style="font-size: 90%;">
            <small>
              Created by: <%= article.user ? article.user.username : "AnÃ³nimo" %>,
              <%= time_ago_in_words(article.created_at) %> ago,
              Last updated: <%= time_ago_in_words(article.updated_at) %> ago.
            </small>
            <ul style="margin: 0px;">
              <li>
                <%= link_to article_path(article) do %>
                  <%= icon('fas', 'eye', style:"margin: 0 5px") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_article_path(article) do %>
                  <%= icon('fas', 'edit') %>
                <% end %>
              </li>
              <li>
                <%= link_to article_path(article), method: :delete do %>
                  <%= icon('fas', 'trash') %>
                <% end %>
              </li>
            </ul>
          </footer>
        </blockquote>
      </div>
    </div>
  <% end %>
</div>
